# This is an example secrets file for your GitHub credentials
# Copy this to secrets.yaml and encrypt it with: sops -e -i secrets.yaml

github:
  # GitHub personal access token for gh CLI
  # Generate one at: https://github.com/settings/tokens
  # Required scopes: repo, read:org, read:public_key, read:repo_hook, user, delete_repo, notifications, gist
  token: "ghp_your_github_token_here"
  
  # Optional: SSH private key content (if you want to manage SSH keys with sops)
  # This should be the content of your ~/.ssh/id_ed25519 file
  ssh-key: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    your_private_key_content_here
    -----END OPENSSH PRIVATE KEY-----